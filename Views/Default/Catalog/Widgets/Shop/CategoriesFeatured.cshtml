@using global::Web.Helpers
@using Web.Model.Models
@model List<Category>
    @if (Model != null)
                {
                    var pos1 = Model.Count() > 0 ? Model[0] : new Category() { Name = "And." };
                    var pos2 = Model.Count() > 1 ? Model[1] : new Category() { Name = "And." };
                    var pos3 = Model.Count() > 2 ? Model[2] : new Category() { Name = "And." };
