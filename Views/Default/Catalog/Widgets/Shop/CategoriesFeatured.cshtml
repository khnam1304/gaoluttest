                            <div data-cover="@pos2.Avatar" data-xs-height="100px" data-sm-height="128px" data-md-height="115px" data-lg-height="154px" data-xl-height="192px"></div>
                            <div class="card-img-overlay card-img-overlay-transparent">
                                <h3 class="card-title text-center">@pos2.Name</h3>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
