        <div class="col-sm-6 col-md-4">
            <div class="row gutters-3">
                <div class="col-6 col-sm-12 mt-sm-0">
                    
                    <a href="@SlugHelper.Category(pos1.Id)">
                        <div class="card zoom-hover">
                            <div data-cover="@pos1.Avatar" data-xs-height="100px" data-sm-height="128px" data-md-height="115px" data-lg-height="154px" data-xl-height="192px"></div>
                            <div class="card-img-overlay card-img-overlay-transparent">
                                <h3 class="card-title text-center">@pos1.Name</h3>
                            </div>
                        </div>
                    </a>
                    

                </div>
                <div class="col-6 col-sm-12" style="margin-top:15px">
                    <a href="@SlugHelper.Category(pos2.Id)">
