@model LoginModel
@{
    Html.EnableClientValidation();
}

<div class="auth auth--inline">
    <div class="auth__wrap auth__wrap--login">
        <!-- BEGIN AUTH LOGIN-->
        <h5 class="auth__title">@LanguageHelper.Translate("Login in your account_Text")</h5>
        @using (Ajax.BeginForm("Login", "Account", new AjaxOptions
        {
            HttpMethod = "POST",
            UpdateTargetId = "cboxLoadedContent",
            LoadingElementId = "login-loader",
            OnBegin = "PagedOnBegin_Login",
            OnSuccess = "PagedOnComplete_Login"

        }, new { autocomplete = "on", @class = "form--flex form--auth js-login-form js-parsley" }))
        {
            @Html.ValidationSummary(true)
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group">
                    <label for="login-username-inline" class="control-label">@LanguageHelper.Translate("Identify | e-mail | phone_Text")</label>
                    <input type="text" name="username" id="login-username-inline" value="@Model.UserName" required data-parsley-trigger="keyup" data-parsley-minlength="6" data-parsley-validation-threshold="5" data-parsley-minlength-message="Login should be at least 6 chars" class="form-control">
                </div>
                <div class="form-group">
                    <label for="login-password-inline" class="control-label">@LanguageHelper.Translate("Password_Text")</label>
                    <input type="password" name="password" id="login-password-inline" value="@Model.Password" required class="form-control">
                    <span class="fa fa-eye-slash pwd-toggle"></span>
                </div>
            </div>
            <div class="row">
                <div class="form__options form__options--forgot">
                    @Html.ActionLink(@LanguageHelper.Translate("Forgot password?"), "ForgotPass", "Account", null, new { @class = "text-link" })
                </div>
                <button type="submit" class="form__submit">@LanguageHelper.Translate("Sign in_Text")</button>
            </div>
            <div class="form__remember">
                <input type="checkbox" id="remember-in-inline" class="in-checkbox" value="@Model.RememberMe" name="rememberMe">
                <label for="remember-in-inline" class="in-label">@LanguageHelper.Translate("Remember me_Text")</label>
            </div>
            <div class="row">
                <div class="form__options">
                    @LanguageHelper.Translate("Not a user yet?_Text")
                    @Html.ActionLink(@LanguageHelper.Translate("Get an account_Text"), "Register", "Account", null, new { @class = "text-link" })
                </div>
            </div>


        }
        <!-- end of block .auth__form-->
        <div class="login-other" style="display:none">
            <div class="text">@LanguageHelper.Translate("Or login via_Text"):</div>
            @Html.ActionLink("Login with Facebook", "Facebook", null, htmlAttributes: new { @class = "facebook" })
            @*@Html.ActionLink("Login with Facebook", "Google", null, htmlAttributes: new { @class = "google" })*@
            <span class="clear"></span>
        </div>
        <!-- END AUTH LOGIN-->
    </div>
</div>