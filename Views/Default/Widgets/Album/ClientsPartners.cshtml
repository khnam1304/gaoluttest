@using ASP.Web.Model.Models
@model ASP.Web.Model.Models.Album
@{
    List<AlbumPictureMapping> items = Model.AlbumPictureMappings.OrderBy(e => e.DisplayOrder).ToList();
}
@for (int i = 0; i <= items.Count - 1; i++)
{
    <div class="owl-item">
        <div class="brand-item">
        <a href="@items[i].Link" title="@items[i].Picture.Title" target="_blank">
            <img data-src="@items[i].Picture.Url" src="~/images/shared/all/loading.svg" alt="@items[i].Picture.Title"></a>
        </div>
    </div>
}
