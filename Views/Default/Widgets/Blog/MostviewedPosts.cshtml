@using ASP.Web.Core
@model List<ASP.Web.Model.Models.BlogPostCategoryMapping>

    @if (Model.Count > 0)
    {
        foreach (var item in Model.Where(e => e.BlogPost.PublishedTime <= DateTime.Now))
        {
            <div class="newsItem">
                <div class="newsItem-img">
                    <a class="border-wrap-container" href="@SlugHelper.BlogPost(item.BlogPostId)" style="background-image: url('@item.BlogPost.Avatar');">
                        <div class="hover-block">
                            <i class="fa fa-search"></i>
                        </div>
                        <div class="border-wrap">
                            <div class="border top">
                                <div></div>
                            </div>
                            <div class="border right">
                                <div></div>
                            </div>
                            <div class="border bottom">
                                <div></div>
                            </div>
                            <div class="border left">
                                <div></div>
                            </div>
                        </div>
                        <img src="@item.BlogPost.Avatar">
                    </a>
                </div>
                <div class="newsItem-text">
                    <div class="title">
                        <a href="@SlugHelper.BlogPost(item.BlogPostId)">@item.BlogPost.Title</a>
                    </div>
                    <div class="date">
                        <i class="fa fa-clock-o" aria-hidden="true"></i><time class="time-ago" datetime="@item.BlogPost.PublishedTime"></time>
                    </div>
                    <div class="shortContent">
                        @Html.Raw(item.BlogPost.Excerpt)
                    </div>
                    <div class="read_more">
                        <a href="@SlugHelper.BlogPost(item.BlogPostId)">Xem thêm</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="item no-data">
            <img style="width: 86%;" src="data:image/png;base64," alt="no data display" />
        </div>
    }
